<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSpray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/mainActivity_menuOption_Start"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:fontFamily="@font/my_custom_font"
            android:gravity="center"
            android:text="@string/menu_Start"
            android:textColor="@color/colorForestBlues"
            android:textSize="40dip"
            android:textStyle="bold"
            android:background="@drawable/ripple_effect" />

        <Button
            android:id="@+id/mainActivity_menuOption_Sound"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:fontFamily="@font/my_custom_font"
            android:gravity="center"
            android:text="@string/menu_Sound"
            android:textColor="@color/colorForestBlues"
            android:textSize="40dip"
            android:textStyle="bold"
            android:background="@drawable/ripple_effect" />

        <Button
            android:id="@+id/mainActivity_menuOption_Options"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:fontFamily="@font/my_custom_font"
            android:gravity="center"
            android:text="@string/menu_Options"
            android:textColor="@color/colorForestBlues"
            android:textSize="40dip"
            android:textStyle="bold"
            android:background="@drawable/ripple_effect" />

    </LinearLayout>
</LinearLayout>
